{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://erfgeo.nl/rdf/pit",
  "type": "object",
  "properties": {
    "id": {
      "id": "http://erfgeo.nl/rdf/pit/id",
      "type": ["integer", "string"]
    },
    "name": {
      "id": "http://erfgeo.nl/rdf/pit/name",
      "type": "string"
    },
    "type": {
      "id": "http://erfgeo.nl/rdf/pit/type",
      "type": "string",
      "enum": [
        "hg:Street",
        "hg:Country",
        "hg:Province",
        "hg:Municipality",
        "hg:Place",
        "hg:Water",
        "hg:Area",
        "hg:Building",
        "hg:Monument",
        "hg:Neighbourhood"
      ]
    },
    "hasBeginning": {
      "type": "string",
      "pattern": "^-?([0-9]{1,4}|[0-9]{2})-([0]?[1-9]|[1][0-2])-([0]?[1-9]|[1|2][0-9]|[3][0|1])$|^$"
    },
    "hasEnd": {
      "type": "string",
      "pattern": "^-?([0-9]{1,4}|[0-9]{2})-([0]?[1-9]|[1][0-2])-([0]?[1-9]|[1|2][0-9]|[3][0|1])$|^$"
    },
    "uri": {
      "type": "string",
      "pattern": "^https?://|^$"
    },
    "geometry": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Point",
            "LineString",
            "Polygon",
            "MultiPoint",
            "MultiLineString",
            "MultiPolygon",
            "GeometryCollection"
          ]
        },
        "coordinates": {}
      },
      "dependencies": {
        "type": ["coordinates"],
        "coordinates": ["type"]
      }
    },
    "data": {}
  },
  "required": [
    "id",
    "name",
    "type"
  ],
  "additionalProperties": false
}
