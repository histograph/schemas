{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": [
        "integer",
        "string"
      ],
      "pattern": "^[a-zA-Z0-9]+[\\w\\._-]*$"
    },
    "uri": {
      "type": "string",
      "pattern": "^\\w+://.+"
    },
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "Address",
        "Monument",
        "Building",
        "Fort",
        "Street",
        "Neighbourhood",
        "Borough",
        "Place",
        "Municipality",
        "Water",
        "Polder",
        "Area",
        "Region",
        "Province",
        "Baljuwschap",
        "Barony",
        "Departement",
        "Countship",
        "Heerlijkheid",
        "Country"
      ]
    },
    "hasBeginning": {
      "type": "string",
      "pattern": "^-?([0-9]{1,4}|[0-9]{2})-([0]?[1-9]|[1][0-2])-([0]?[1-9]|[1|2][0-9]|[3][0|1])$|^$"
    },
    "hasEnd": {
      "type": "string",
      "pattern": "^-?([0-9]{1,4}|[0-9]{2})-([0]?[1-9]|[1][0-2])-([0]?[1-9]|[1|2][0-9]|[3][0|1])$|^$"
    },
    "geometry": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Point",
            "LineString",
            "Polygon",
            "MultiPoint",
            "MultiLineString",
            "MultiPolygon",
            "GeometryCollection"
          ]
        },
        "coordinates": {}
      },
      "dependencies": {
        "type": [
          "coordinates"
        ],
        "coordinates": [
          "type"
        ]
      }
    },
    "data": {}
  },
  "oneOf": [
    {
      "required": [
        "id",
        "type"
      ]
    },
    {
      "required": [
        "uri",
        "type"
      ]
    }
  ],
  "additionalProperties": false
}